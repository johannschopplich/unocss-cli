{
  "name": "unocss-cli",
  "version": "0.2.0",
  "description": "The missing CLI for UnoCSS",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "bin": {
    "unocss-cli": "dist/cli.js"
  },
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/unocss-cli.git"
  },
  "keywords": [
    "unocss",
    "atomic",
    "css"
  ],
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johannschopplich/unocss-cli/issues"
  },
  "homepage": "https://github.com/johannschopplich/unocss-cli#readme",
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --clean --dts",
    "test": "npm run build && jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@unocss/config": "^0.7.4",
    "cac": "^6.7.11",
    "chokidar": "^3.5.2",
    "colorette": "^2.0.16",
    "consola": "^2.15.3",
    "fast-glob": "^3.2.7",
    "pathe": "^0.2.0",
    "unocss": "^0.7.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "conventional-changelog-cli": "^2.1.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "prompts": "^2.4.2",
    "ts-essentials": "^9.0.0",
    "ts-jest": "^27.0.7",
    "tsup": "^5.6.0",
    "typescript": "^4.4.4"
  }
}
